<div class="container" style="width: 900px">
<p id="notice"><%= notice %></p>

<h3 >LIST OF PRODUCTS</h3>

<table class="table table-striped table-bordered"  style="width:1px,margin-left: 194px" >
  <thead>
    <tr class="success">
      <th>Batchno</th>
      <th>Name</th>
      <th>Category_type</th>
      <th>Unit price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>image</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr >
        <td><%= product.batchno %></td>
        <td><%= product.name %></td>
        <td><%= product.Category_type %></td>
        <td><%= product.unit_price %></td>
        <td><%= product.quntity%></td>
        <td><%= product.total%></td>
        <td><%= image_tag product.image.url,  :size => "60x70" %></td>
        <td><%= link_to 'Show', product, :class => "label label-success"%></td>
        <td><%= link_to 'Edit', edit_product_path(product),:class => "label label-info" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => "label label-primary" %></td>
        <td><%= link_to "Checkout", product.paypal_url(products_url),:class => "label label-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Product', new_product_path %>
</div>


